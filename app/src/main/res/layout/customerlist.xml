<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/retailercard_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/listLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/RetailerlistSno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="13dp" />
            <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="0.5"
                 android:orientation="vertical">
                <TextView
                    android:id="@+id/Retailerlistretailername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="left"
                    android:text="Retailer Name"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/RetailerArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="left"
                    android:text="Area"
                    android:padding="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/Retailercity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:padding="2dp"
                    android:gravity="left"
                    android:text="City"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="0.4">
                <TextView
                    android:id="@+id/Retailermobileno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:layout_weight="0.4"
                    android:gravity="right"
                    android:text="9715148697"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/Verifiedstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/cornerbackground"
                    android:drawableLeft="@drawable/ic_baseline_check_20"
                    android:drawablePadding="1dp"
                    android:drawableTint="@color/white"
                    android:gravity="left|center"
                    android:padding="2dp"
                    android:text="Verified"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
                    <TextView
                    android:id="@+id/Retailertelephoneno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:drawableLeft="@drawable/ic_telephone_phone"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:gravity="right|center"
                    android:text="0453-28888987"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />
<!--                <TextView-->
<!--                    android:id="@+id/Retailergstin"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="0.4"-->
<!--                    android:gravity="left"-->
<!--                    android:text="GSTIN : "-->
<!--                    android:textColor="@android:color/black"-->
<!--                    android:textSize="13dp" />-->

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/listLL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/listLL"
            android:weightSum="1">
            <TextView
                android:id="@+id/RetailerlistSno1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:visibility="invisible"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="0.9">
                    <TextView
                        android:id="@+id/Retailergstin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:text="GSTIN : "
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>