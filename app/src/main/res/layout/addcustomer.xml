<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llay"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:drawableTint="@android:color/white"
            android:drawablePadding="12dp"
            android:textColor="@android:color/white"
            android:layout_weight="0.9"
            android:id="@+id/tt1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closepopup"
            android:padding="5dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <View
        android:id="@+id/View1"
        android:layout_below="@+id/llay"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bfbdbd" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:visibility="gone"
                android:id="@+id/LL11">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtroute"
                    android:background="@drawable/editbackground"
                    android:hint="Route"
                    android:textColorHint="@color/graycolor"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/txtroutecode"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL11"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LL12">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcustomername"
                    android:background="@drawable/editbackground"
                    android:hint="Customer Name"
                    android:textColorHint="@color/graycolor"
                    android:inputType="text|textNoSuggestions"
                    android:padding="10dp"
                    android:maxLength="250"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL12"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LL17">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcustomernametamil"
                    android:background="@drawable/editbackground"
                    android:hint="Customer Name In Tamil"
                    android:textColorHint="@color/graycolor"
                    android:inputType="text|textNoSuggestions"
                    android:maxLength="250"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL17"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="1"
                android:id="@+id/LL13">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtaddress"
                    android:background="@drawable/editbackground"
                    android:hint="Address"
                    android:maxLength="500"
                    android:textColorHint="@color/graycolor"
                    android:inputType="textFilter|textNoSuggestions"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL13"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LL19">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcityname"
                    android:background="@drawable/editbackground"
                    android:hint="City"
                    android:textColorHint="@color/graycolor"
                    android:inputType="text|textNoSuggestions"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL19"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LL20">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtarea"
                    android:background="@drawable/editbackground"
                    android:hint="Area"
                    android:textColorHint="@color/graycolor"
                    android:inputType="text|textNoSuggestions"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL20"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="1"
                android:id="@+id/LL14">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtphoneno"
                    android:background="@drawable/editbackground"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Mobile No."
                    android:textColorHint="@color/graycolor"
                    android:inputType="number|textNoSuggestions"
                    android:digits="1234567890"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:importantForAutofill="no"
                    android:layout_weight="0.5"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="Verify"
                    android:id="@+id/btnGetOTPCustomer"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:background="@color/colorOpening"
                    android:layout_weight="0.5"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL14"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="1"
                android:id="@+id/LLWhatsapp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtwhatsappno"
                    android:background="@drawable/editbackground"
                    android:drawableLeft="@drawable/ic_reshot_icon_whatsapp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="WhatsApp No."
                    android:textColorHint="@color/graycolor"
                    android:inputType="number|textNoSuggestions"
                    android:digits="1234567890"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LLWhatsapp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LL15">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtlandlineno"
                    android:background="@drawable/editbackground"
                    android:drawableLeft="@drawable/ic_telephone_phone"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Telephone No."
                    android:textColorHint="@color/graycolor"
                    android:inputType="number|textNoSuggestions"
                    android:digits="1234567890"
                    android:maxLength="15"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL15"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LL21">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtemailid"
                    android:background="@drawable/editbackground"
                    android:drawableLeft="@drawable/ic_reshot_icon_email_transfer"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Email ID"
                    android:textColorHint="@color/graycolor"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:maxLength="50"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL21"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LL22">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtgstin"
                    android:layout_weight="0.5"
                    android:background="@drawable/editbackground"
                    android:hint="GSTIN"
                    android:textColorHint="@color/graycolor"
                    android:inputType="textCapCharacters|textNoSuggestions"
                    android:maxLength="15"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL22"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LL222">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtadhar"
                    android:layout_weight="0.5"
                    android:background="@drawable/editbackground"
                    android:hint="Aadhar  No."
                    android:textColorHint="@color/graycolor"
                    android:inputType="number|textNoSuggestions"
                    android:maxLength="12"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LL222"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LLCusType">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcustomertype"
                    android:background="@drawable/editbackground"
                    android:hint="Customer Type"
                    android:textColorHint="@color/graycolor"
                    android:inputType="text|textNoSuggestions"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LLCusType"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:id="@+id/LLSalesType">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtsalestype"
                    android:background="@drawable/editbackground"
                    android:hint="Sales Type"
                    android:textColorHint="@color/graycolor"
                    android:inputType="text|textNoSuggestions"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down"
                    android:textSize="14sp"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LLSalesType"
                android:id="@+id/LL4"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Update Location"
                    android:id="@+id/btnUpdateCustomerLocation"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:padding="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Save"
                    android:id="@+id/btnSaveCustomer"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:padding="6dp"
                    android:background="@color/colorPrimary"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
