    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/openingLL"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:id="@+id/LLbillcopy">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtexpenseshead"
            android:background="@drawable/editbackground"
            android:hint="Expense Head"
            android:textColorHint="@color/graycolor"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_keyboard_arrow_down"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/txtexpensescode"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/LLbillcopy"
        android:weightSum="1"
        android:id="@+id/LL14">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtamount"
            android:inputType="numberDecimal"
            android:ellipsize="end"
            android:hint="Amount"
            android:textColorHint="@color/graycolor"
            android:maxLength="10"
            android:background="@drawable/editbackground"
            android:gravity="right"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/LL14"
        android:weightSum="1"
        android:id="@+id/LL16">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtremarks"
            android:inputType="text"
            android:hint="Remarks"
            android:textColorHint="@color/graycolor"
            android:maxLength="500"
            android:background="@drawable/editbackground"
            android:gravity="left"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL16"
        android:id="@+id/LL4"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Save"
            android:id="@+id/btnSaveExpenses"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="6dp"
            android:textAllCaps="false"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>